<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>openCRX IMAP Service</display-name>
	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
		<init-param>
			<param-name>logLevel</param-name>
			<param-value>WARN</param-value>
		</init-param>
	</filter>			
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>		
	<servlet>
		<servlet-name>IMAPServlet</servlet-name>
		<servlet-class>org.opencrx.groupware.imap.IMAPServlet</servlet-class>
		<init-param>
		  <param-name>provider</param-name>
		  <param-value>provider/CRX</param-value>
		</init-param>
		<init-param>
		  <param-name>port</param-name>
		  <param-value>imap:143</param-value>
		</init-param>
		<init-param>
		  <param-name>debug</param-name>
		  <param-value>false</param-value>
		</init-param>		
		<init-param>
		  <param-name>delayOnStartup</param-name>
		  <param-value>60</param-value>
		</init-param>		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>IMAPServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<ejb-ref id="ejb_data">
		<ejb-ref-name>ejb/data</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>org.openmdx.compatibility.application.dataprovider.transport.ejb.cci.Dataprovider_1Home</home>
		<remote>org.openmdx.compatibility.application.dataprovider.transport.ejb.cci.Dataprovider_1_0Remote</remote>
	</ejb-ref>	
</web-app>
