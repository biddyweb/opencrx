<Context path="/opencrx-store-CRX" docBase="${catalina.home}/webapps/opencrx-store-CRX.war" debug="0" privileged="true">
	<Realm className="org.apache.catalina.realm.MemoryRealm"/>

	<Resource 
	    name="ejb/data" 
	    auth="Container" 
	    type="org.openmdx.compatibility.application.dataprovider.transport.ejb.cci.Dataprovider_1Home"
	/>
	<ResourceParams name="ejb/data">
		<parameter>
			<name>factory</name>
			<value>org.openmdx.kernel.naming.tomcat.DelegatingObjectFactory</value>
		</parameter>
		<parameter>
			<name>jndiName</name>
			<value>org/opencrx/core/CRX/noOrNew/gateway</value>
		</parameter>
	</ResourceParams>

</Context>
