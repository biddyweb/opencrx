<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE openmdx-ejb-jar PUBLIC "-//openMDX//DTD Enterprise JavaBeans Extension 1.0//EN" "http://www.openmdx.org/dtd/openmdx-ejb-jar_1_0.dtd">
<openmdx-ejb-jar>
	<enterprise-beans>
		<session>
			<ejb-name>opencrx_core_CRX_security_mandatory</ejb-name>
			<jndi-name>org/opencrx/core/CRX/mandatory/security</jndi-name>
			<local-jndi-name>org/opencrx/core/CRX/local/mandatory/security</local-jndi-name>
			<resource-ref>
				<res-ref-name>jdbc/datasource[0]</res-ref-name>
				<jndi-name>jdbc/jdbc_opencrx_CRX</jndi-name>
			</resource-ref>
			<pool>
				<initial-capacity>10</initial-capacity>
				<maximum-capacity>100</maximum-capacity>
				<maximum-wait>100</maximum-wait>
			</pool>			
		</session>
	</enterprise-beans>
</openmdx-ejb-jar>
