<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE weblogic-ejb-jar PUBLIC '-//BEA Systems, Inc.//DTD WebLogic 7.0.0 EJB//EN' 'http://www.bea.com/servers/wls700/dtd/weblogic-ejb-jar.dtd'>
<weblogic-ejb-jar>
	<weblogic-enterprise-bean>
		<ejb-name>opencrx_core_CRX_kernel_mandatory</ejb-name>
		<stateless-session-descriptor>
			<pool>
				<max-beans-in-free-pool>100</max-beans-in-free-pool>
				<initial-beans-in-free-pool>1</initial-beans-in-free-pool>
			</pool>
		</stateless-session-descriptor>
		<reference-descriptor>
			<!-- EXTERNAL_PROVIDER_ENABLE_BEGIN
			<ejb-reference-description>
				<ejb-ref-name>ejb/dataprovider[4]</ejb-ref-name>
				<jndi-name>EXTERNAL_PROVIDER_JNDI_NAME_FORMAT1</jndi-name>
			</ejb-reference-description>		  
		  EXTERNAL_PROVIDER_ENABLE_END -->
			<resource-description>
				<res-ref-name>jdbc/datasource[0]</res-ref-name>
				<jndi-name>jdbc.jdbc_opencrx_CRX</jndi-name>
			</resource-description>
		</reference-descriptor>
		<enable-call-by-reference>true</enable-call-by-reference>
		<local-jndi-name>org.opencrx.core.CRX.local.mandatory.kernel</local-jndi-name>
	</weblogic-enterprise-bean>
</weblogic-ejb-jar>
