<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE openmdx-ejb-jar PUBLIC "-//openMDX//DTD Enterprise JavaBeans Extension 1.0//EN" "http://www.openmdx.org/dtd/openmdx-ejb-jar_1_0.dtd">
<openmdx-ejb-jar>
	<enterprise-beans>
		<session>
			<ejb-name>opencrx_core_CRX_EntityManagerFactory</ejb-name>
			<local-jndi-name>org/opencrx/core/CRX/EntityManagerFactory</local-jndi-name>
			<pool>
				<initial-capacity>10</initial-capacity>
				<maximum-capacity>100</maximum-capacity>
				<maximum-wait>100</maximum-wait>
			</pool>			
		</session>
		<session>
			<ejb-name>opencrx_core_CRX_Gateway</ejb-name>
			<jndi-name>org/opencrx/core/CRX/Gateway</jndi-name>
			<pool>
				<initial-capacity>10</initial-capacity>
				<maximum-capacity>100</maximum-capacity>
				<maximum-wait>100</maximum-wait>
			</pool>			
		</session>
	</enterprise-beans>
</openmdx-ejb-jar>
