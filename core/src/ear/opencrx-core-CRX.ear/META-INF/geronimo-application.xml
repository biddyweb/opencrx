<?xml version="1.0" encoding="UTF-8"?>
<application 
  xmlns="http://geronimo.apache.org/xml/ns/j2ee/application"
  configId="opencrx-core-CRX_ear"
  parentId="geronimo/j2ee-server/1.0/car"
>
	<security>
		<default-principal>
			<principal class="org.apache.geronimo.security.realm.providers.GeronimoUserPrincipal" name="OpenCrxUser"/>
		</default-principal>
		<role-mappings>
			<role role-name="OpenCrxUser">
				<principal class="org.apache.geronimo.security.realm.providers.GeronimoGroupPrincipal" name="OpenCrxUser" designated-run-as="true"/>
			</role>
			<role role-name="OpenCrxRoot">
				<principal class="org.apache.geronimo.security.realm.providers.GeronimoGroupPrincipal" name="OpenCrxRoot" designated-run-as="true"/>
			</role>
			<role role-name="OpenCrxAdministrator">
				<principal class="org.apache.geronimo.security.realm.providers.GeronimoGroupPrincipal" name="OpenCrxAdministrator" designated-run-as="true"/>
			</role>
		</role-mappings>
	</security>
</application>
