<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//Sun Microsystems, Inc.//DTD J2EE Application 1.3//EN" "http://java.sun.com/dtd/application_1_3.dtd">
<application id="Application_ID">
	<display-name>openCRX EAR</display-name>
	<module>
		<ejb>kernel.jar</ejb>
	</module>
	<module>
		<ejb>security.jar</ejb>
	</module>
	<module>
		<ejb>gateway.jar</ejb>
	</module>
	<module id="WebModule_1">
		<web>
			<web-uri>opencrx-core-CRX-Web.war</web-uri>
			<context-root>opencrx-core-CRX-Web</context-root>
		</web>
	</module>
	<module id="WebModule_2">
		<web>
			<web-uri>opencrx-ical-CRX.war</web-uri>
			<context-root>opencrx-ical-CRX</context-root>
		</web>
	</module>
	<module id="WebModule_3">
		<web>
			<web-uri>opencrx-imap-CRX.war</web-uri>
			<context-root>opencrx-imap-CRX</context-root>
		</web>
	</module>
	<module id="WebModule_4">
		<web>
			<web-uri>opencrx-vcard-CRX.war</web-uri>
			<context-root>opencrx-vcard-CRX</context-root>
		</web>
	</module>		
	<security-role id="SecurityRole_OpenCrxUser">
		<description>openCRX Standard Users</description>
		<role-name>OpenCrxUser</role-name>
	</security-role>
	<security-role id="SecurityRole_OpenCrxAdministrator">
		<description>openCRX Administrator Users</description>
		<role-name>OpenCrxAdministrator</role-name>
	</security-role>
	<security-role id="SecurityRole_OpenCrxRoot">
		<description>openCRX Root Users</description>
		<role-name>OpenCrxRoot</role-name>
	</security-role>	
</application>
