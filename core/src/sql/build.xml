<project name="opencrx-generate-sql-scripts">
	<target name="generate" description="generate SQL scripts">
	  <!-- HSQLDB_2 -->	
		<exec executable="gcc">
		  <arg line="-E -C -P -I. -xc -DHSQLDB_2 -ohsqldb-2/dbcreate-views.sql dbcreate-views.tsql"/>
		</exec>
		<exec executable="gcc">
		  <arg line="-E -C -P -I. -xc -DHSQLDB_2 -ohsqldb-2/migrate-from-2.10-to-2.11.sql migrate-from-2.10-to-2.11.tsql"/>
		</exec>
		<exec executable="gcc">
		  <arg line="-E -C -P -I. -xc -DHSQLDB_2 -ohsqldb-2/drop-from-2.10-to-2.11.sql drop-from-2.10-to-2.11.tsql"/>
		</exec>
		<exec executable="gcc">
		  <arg line="-E -C -P -I. -xc -DHSQLDB_2 -ohsqldb-2/delete-segment.sql delete-segment.tsql"/>
		</exec>
	</target>
</project>
