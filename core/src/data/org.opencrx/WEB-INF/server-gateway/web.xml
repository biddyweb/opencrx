<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="webapp">
	<!-- servlet -->
	<servlet id="servlet">
		<servlet-name>openCRX_Server_Gateway_Servlet</servlet-name>
		<display-name>openCRX Server Gateway Servlet</display-name>
		<servlet-class>org.openmdx.compatibility.application.dataprovider.transport.http.to.ejb.Dataprovider_1Servlet</servlet-class>
		<init-param>
			<param-name>security</param-name>
			<param-value>setPrincipalName</param-value>
		</init-param>
	</servlet>
	<!-- servlet-mapping -->
	<servlet-mapping id="servlet_mapping">
		<servlet-name>openCRX_Server_Gateway_Servlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<!-- security-constraint -->
	<security-constraint id="security_constraint">
		<web-resource-collection id="web-resource-collection">
			<web-resource-name>All</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>HEAD</http-method>
		</web-resource-collection>
		<auth-constraint id="auth_constraint">
			<role-name>OpenCrxUser</role-name>
			<role-name>OpenCrxAdministrator</role-name>
			<role-name>OpenCrxRoot</role-name>
		</auth-constraint>
		<user-data-constraint id="user_data_constraint">
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<!-- login-config -->
	<login-config id="login_config">
		<auth-method>BASIC</auth-method>
		<realm-name>myrealm</realm-name>
	</login-config>
	<security-role id="SecurityRole_OpenCrxUser">
		<role-name>OpenCrxUser</role-name>
	</security-role>
	<security-role id="SecurityRole_OpenCrxAdministrator">
		<role-name>OpenCrxAdministrator</role-name>
	</security-role>
	<security-role id="SecurityRole_OpenCrxRoot">
		<role-name>OpenCrxRoot</role-name>
	</security-role>
	<!-- ejb-ref -->
	<ejb-ref id="dataprovider">
		<ejb-ref-name>ejb/dataprovider</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>org.openmdx.compatibility.application.dataprovider.transport.ejb.cci.Dataprovider_1Home</home>
		<remote>org.openmdx.compatibility.application.dataprovider.transport.ejb.cci.Dataprovider_1_0Remote</remote>
	</ejb-ref>
</web-app>
