<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>openCRX IMAP Servlet</display-name>
	<servlet>
		<servlet-name>IMAPServlet</servlet-name>
		<servlet-class>org.opencrx.application.imap.IMAPServlet</servlet-class>
		<init-param>
		  <param-name>provider</param-name>
		  <param-value>provider/CRX</param-value>
		</init-param>
		<init-param>
		  <param-name>port</param-name>
		  <param-value>imap:143</param-value>
		</init-param>
		<init-param>
		  <param-name>debug</param-name>
		  <param-value>false</param-value>
		</init-param>		
		<init-param>
		  <param-name>delayOnStartup</param-name>
		  <param-value>60</param-value>
		</init-param>
		<!--	
		<init-param>
		  <param-name>sslKeystoreFile</param-name>
		  <param-value>/var/ssl/keystore.jks</param-value>
		</init-param>	
		<init-param>
		  <param-name>sslKeystoreType</param-name>
		  <param-value>JKS</param-value>
		</init-param>	
		<init-param>
		  <param-name>sslKeystorePass</param-name>
		  <param-value>changeit</param-value>
		</init-param>	
		<init-param>
		  <param-name>sslKeyPass</param-name>
		  <param-value>changeit</param-value>
		</init-param>
		-->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>IMAPServlet</servlet-name>
		<url-pattern>/IMAPServlet/*</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<resource-ref>
		<res-ref-name>jdbc_opencrx_CRX</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>		
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>secure</web-resource-name>
			<description>secure</description>
			<url-pattern>/IMAPServlet/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	<security-role>
		<role-name>OpenCrxRoot</role-name>
	</security-role>
</web-app>
