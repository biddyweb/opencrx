<Context
	path="/opencrx-imap-CRX"
	docBase="${catalina.home}/apps/opencrx-core-CRX/opencrx-imap-CRX.war"
>
<!--
	<Valve className="org.apache.catalina.valves.AccessLogValve"
		directory="logs" prefix="combined_access_log."
		suffix=".txt" pattern="combined" resolveHosts="false"
	/>
-->		
	<Realm  className="org.apache.catalina.realm.ExtendedJDBCRealm" 
		debug="0"
		digest="MD5"
		digestEncoding="UTF-8"
		digestFormat="base64"
		flag="sufficient"
		driverName="${opencrx.CRX.jdbc.driverName}"
		connectionURL="${opencrx.CRX.jdbc.url}"
		connectionName="${opencrx.CRX.jdbc.userName}" 
		connectionPassword="${opencrx.CRX.jdbc.password}"
		userTable="OOMSE2_TOBJ_USERS" 
		userNameCol="principal_name" 
		userCredCol="passwd"
		userRoleTable="OOMSE2_TOBJ_ROLES" 
		roleNameCol="role_name" 
	/>	
</Context>
