<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>openCRX REST service</display-name>
	<servlet>
		<servlet-name>RestServlet</servlet-name>
		<servlet-class>org.openmdx.application.rest.http.RestServlet_2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RestServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<description>rest</description>
			<url-pattern>/</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	<security-role>
		<description>An openCRX user</description>
		<role-name>OpenCrxUser</role-name>
	</security-role>	
	<security-role>
		<role-name>OpenCrxAdministrator</role-name>
	</security-role>	
	<ejb-local-ref id="ejb_EntityManagerFactory">
		<ejb-ref-name>ejb/EntityManagerFactory</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>org.openmdx.application.persistence.ejb.EntityManagerFactory_2LocalHome</local-home>
		<local>org.openmdx.application.persistence.ejb.EntityManagerFactory_2_0Local</local>
		<ejb-link>gateway.jar#opencrx_core_CRX_EntityManagerFactory</ejb-link>
	</ejb-local-ref>
</web-app>
