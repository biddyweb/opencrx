<project>
    <shortName>opencrxServer</shortName>
    <fullName>openCRX Server</fullName>
    <version>2.4.0</version>
    <installerFilename></installerFilename>
    <readmeFile>../../image/opencrx-server/installer/opencrx-server/README</readmeFile>
    <licenseFile>../../image/opencrx-server/installer/opencrx-server/LICENSE</licenseFile>
    <logoImage>../../image/opencrx-server/installer/opencrx-server/logo.png</logoImage>
    <splashImage>../../image/opencrx-server/installer/opencrx-server/splash.gif</splashImage>
    <postInstallationScript>${installdir}/installer/opencrx-server/bin/postinstallation.sh</postInstallationScript>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <enableRollback>1</enableRollback>
    <uninstallerDirectory>${installdir}/installer/opencrx-server</uninstallerDirectory>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Start ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                    <exec>${installdir}/bin/opencrx.sh START</exec>
                    <icon>${installdir}/installer/opencrx-server/favicon.ico</icon>
                    <name>Start ${product_fullname} ${product_version} (${hsqldb_port})</name>
                    <path>${installdir}/bin/</path>
                    <platforms>all</platforms>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </shortcut>
                <shortcut>
                    <comment>Stop ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                    <exec>${installdir}/bin/opencrx.sh STOP</exec>
                    <icon>${installdir}/installer/opencrx-server/favicon.ico</icon>
                    <name>Stop ${product_fullname} ${product_version} (${hsqldb_port})</name>
                    <path>${installdir}/bin/</path>
                    <platforms>all</platforms>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </shortcut>
                <shortcut>
                    <comment>HSQLDB Console (${hsqldb_port})</comment>
                    <exec>${installdir}/data/crx_2_4/startdbmanager.sh</exec>
                    <icon>${installdir}/data/hsqldb.ico</icon>
                    <name>HSQLDB Console (${hsqldb_port})</name>
                    <path>${installdir}/data/crx_2_4/</path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdbmanager.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </shortcut>
                <shortcut>
                    <comment>Start HSQLDB (${hsqldb_port})</comment>
                    <exec>${installdir}/data/crx_2_4/startdb.sh START</exec>
                    <icon>${installdir}/data/hsqldb.ico</icon>
                    <name>Start HSQLDB (${hsqldb_port})</name>
                    <path>${installdir}/data/crx_2_4/</path>
                    <platforms>all</platforms>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdb.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </shortcut>
                <shortcut>
                    <comment>Stop HSQLDB (${hsqldb_port})</comment>
                    <exec>${installdir}/data/crx_2_4/startdb.sh STOP</exec>
                    <icon>${installdir}/data/hsqldb.ico</icon>
                    <name>Stop HSQLDB (${hsqldb_port})</name>
                    <path>${installdir}/data/crx_2_4/</path>
                    <platforms>all</platforms>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdb.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <actionList>
                        <substitute>
                            <files>*/*.bat; */*.sh; */*.properties; */*.xml</files>
                            <type>regexp</type>
                            <substitutionList>
                                <substitution>
                                    <pattern>@@INSTALLDIR@@</pattern>
                                    <value>${installdir}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@ANT_HOME@@</pattern>
                                    <value>${ant_home}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@JAVA_HOME@@</pattern>
                                    <value>${java_home}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@VERSION@@</pattern>
                                    <value>${product_version}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@HSQLDB_PORT@@</pattern>
                                    <value>${hsqldb_port}</value>
                                </substitution>
                            </substitutionList>
                        </substitute>
                        <changePermissions>
                            <files>*/*.sh;*/*.bin</files>
                            <permissions>755</permissions>
                        </changePermissions>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/installer</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/installer/opencrx-server/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname} (${hsqldb_port})</name>
                            <path>${installdir}/installer/opencrx-server/</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/installer/opencrx-server/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}/installer/opencrx-server/</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>deployment-units</description>
                    <destination>${installdir}/apache-tomcat-6/apps</destination>
                    <name>apps</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../jre-1.5/core/deployment-unit/opencrx-core-CRX.ear</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../jre-1.5/apps/deployment-unit/opencrx-apps-CRX.ear</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname} (${hsqldb_port})</comment>
                    <name>Uninstall ${product_fullname} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/installer/opencrx-server/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/installer/opencrx-server/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start ${product_fullname} (${hsqldb_port})</comment>
                    <name>Start ${product_fullname} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop ${product_fullname} (${hsqldb_port})</comment>
                    <name>Stop ${product_fullname} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>HSQLDB Console (${hsqldb_port})</comment>
                    <name>HSQLDB Console (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdbmanager.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start HSQLDB (${hsqldb_port})</comment>
                    <name>Start HSQLDB (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdb.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop HSQLDB (${hsqldb_port})</comment>
                    <name>Stop HSQLDB (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_4/startdb.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_4/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <infoParameter>
            <name>important</name>
            <title>IMPORTANT</title>
            <description></description>
            <explanation>Installation instructions</explanation>
            <value>This installer adds openCRX to an existing openMDX Tomcat+EJB installation. The installation comes with a preconfigured HSQLDB database. The installer does NOT include openMDX Tomcat+EJB. Make sure you have this package installed before continuing.</value>
            <default></default>
            <trimMarginNumChars>0</trimMarginNumChars>
        </infoParameter>
        <directoryParameter>
            <name>java_home</name>
            <description>JDK 1.5 home directory</description>
            <explanation>Select home directory of an existing JDK 1.5, e.g. C:\pgm\Java\jdk1.5.0 on Windows or /usr/lib/jvm/jdk1.5.0 on Linux platforms.</explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <directoryParameter>
            <name>ant_home</name>
            <description>Ant 1.7.0 home directory</description>
            <explanation>Select home directory of an existing Ant 1.7.0 installation, e.g. C:\pgm\apache-ant-1.7.0 on Windows or /opt/apache-ant-1.7.0 on Linux platforms.</explanation>
            <value></value>
            <default>/opt/apache-ant-1.7.0</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Tomcat+EJB directory</description>
            <explanation>openCRX is added to an existing Tomcat+EJB installation.</explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <stringParameter>
            <name>hsqldb_port</name>
            <description>HSQLDB port</description>
            <explanation>The installer comes with a default database. Please enter the port number for the HSQLDB database.</explanation>
            <value></value>
            <default>9001</default>
            <allowEmptyValue>0</allowEmptyValue>
            <width>40</width>
        </stringParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <postInstallationScript>${installdir}/installer/opencrx-server/bin/postinstallation.bat</postInstallationScript>
            <postInstallationScriptArguments></postInstallationScriptArguments>
            <platform>windows</platform>
        </platformOptions>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

