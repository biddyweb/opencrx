<project>
    <shortName>opencrxServer</shortName>
    <fullName>openCRX Server</fullName>
    <version>2.3.0</version>
    <installerFilename></installerFilename>
    <readmeFile>../../image/opencrx-server/README</readmeFile>
    <licenseFile>../../image/opencrx-server/LICENSE</licenseFile>
    <logoImage>../../image/opencrx-server/logo.png</logoImage>
    <splashImage>../../image/opencrx-server/splash.gif</splashImage>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <enableRollback>1</enableRollback>
    <uninstallerDirectory>${installdir}/opencrx-server</uninstallerDirectory>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>${product_fullname} ${product_version} HSQLDB Console (${hsqldb_port})</comment>
                    <exec>${installdir}/data/crx_2_3/startdbmanager.sh</exec>
                    <icon>${installdir}/opencrx-server/favicon.ico</icon>
                    <name>${product_fullname} ${product_version} HSQLDB Console (${hsqldb_port})</name>
                    <path>${installdir}/data/crx_2_3/</path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_3/startdbmanager.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_3/</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <actionList>
                        <substitute>
                            <files>*/*.bat; */*.sh; */*.properties; */ra.xml; */opencrx-core-CRX.xml; */opencrx-ical-CRX.xml; */opencrx-vcard-CRX.xml; */opencrx-rest-CRX.xml</files>
                            <type>regexp</type>
                            <substitutionList>
                                <substitution>
                                    <pattern>@@INSTALLDIR@@</pattern>
                                    <value>${installdir}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@JAVA_HOME@@</pattern>
                                    <value>${java_home}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@VERSION@@</pattern>
                                    <value>${product_version}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@HSQLDB_PORT@@</pattern>
                                    <value>${hsqldb_port}</value>
                                </substitution>
                            </substitutionList>
                        </substitute>
                        <changePermissions>
                            <files>*/*.sh;*/*.bin</files>
                            <permissions>755</permissions>
                        </changePermissions>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/apache-tomcat-6</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/data</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/opencrx-server/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname} (${hsqldb_port})</name>
                            <path>${installdir}/opencrx-server/</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/opencrx-server/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}/opencrx-server/</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>deployment-units</description>
                    <destination>${installdir}/apache-tomcat-6/deployment-units</destination>
                    <name>deployment-units</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../jre-1.5/core/deployment-unit/opencrx-core-CRX.ear</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../jre-1.5/store/deployment-unit/opencrx-store-CRX.ear</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>opencrx-server</description>
                    <destination>${installdir}/opencrx-server</destination>
                    <name>opencrx-server</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../image/opencrx-server/favicon.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../image/opencrx-server/README</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../image/opencrx-server/LICENSE</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname} (${hsqldb_port})</comment>
                    <name>Uninstall ${product_fullname} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/opencrx-server/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/opencrx-server/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>${product_fullname} HSQLDB Console (${hsqldb_port})</comment>
                    <name>${product_fullname} HSQLDB Console (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_3/startdbmanager.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/opencrx-server/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_3/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <infoParameter>
            <name>important</name>
            <title>IMPORTANT</title>
            <description></description>
            <explanation>Installation instructions</explanation>
            <value>This installer adds openCRX to an existing openMDX Tomcat+LWC installation. The installation comes with a preconfigured HSQLDB database. The installer does NOT include openMDX Tomcat+LWC. Make sure you have this package installed before continuing.</value>
            <default></default>
            <trimMarginNumChars>0</trimMarginNumChars>
        </infoParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Tomcat+LWC directory</description>
            <explanation>openCRX is added to an existing Tomcat+LWC installation.</explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <stringParameter>
            <name>hsqldb_port</name>
            <description>HSQLDB port</description>
            <explanation>Please enter the port number for the HSQLDB service.</explanation>
            <value></value>
            <default>9001</default>
            <allowEmptyValue>0</allowEmptyValue>
            <width>40</width>
        </stringParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <postInstallationScriptArguments></postInstallationScriptArguments>
            <platform>windows</platform>
        </platformOptions>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

