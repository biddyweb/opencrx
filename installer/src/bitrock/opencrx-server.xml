<project>
    <shortName>opencrxServer</shortName>
    <fullName>openCRX Server</fullName>
    <version>2.8.5</version>
    <installerFilename></installerFilename>
    <readmeFile>../../image/opencrx-server/installer/README</readmeFile>
    <licenseFile>../../image/opencrx-server/installer/LICENSE</licenseFile>
    <logoImage>../../image/opencrx-server/installer/logo.png</logoImage>
    <splashImage>../../image/opencrx-server/installer/splash.gif</splashImage>
    <postInstallationScript>${installdir}/installer/bin/postinstallation.sh</postInstallationScript>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <uninstallerDirectory>${installdir}/installer</uninstallerDirectory>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <actionList>
                        <substitute>
                            <files>*/*.bat; */*.sh; */*.properties; */*.xml; */*.rc</files>
                            <type>regexp</type>
                            <substitutionList>
                                <substitution>
                                    <pattern>@@INSTALLDIR@@</pattern>
                                    <value>${installdir}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@ANT_HOME@@</pattern>
                                    <value>${ant_home}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@JAVA_HOME@@</pattern>
                                    <value>${java_home}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@VERSION@@</pattern>
                                    <value>${product_version}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@HSQLDB_PORT@@</pattern>
                                    <value>${hsqldb_port}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@TOMCAT_HTTP_PORT@@</pattern>
                                    <value>${tomcat_http_port}</value>
                                </substitution>
                                <substitution>
                                    <pattern>@@TOMCAT_SERVER_PORT@@</pattern>
                                    <value>${tomcat_server_port}</value>
                                </substitution>
                                <substitution>
                                    <pattern>port="8080"</pattern>
                                    <value>port="${tomcat_http_port}"</value>
                                </substitution>
                                <substitution>
                                    <pattern>port="8443"</pattern>
                                    <value>port="${tomcat_https_port}"</value>
                                </substitution>
                                <substitution>
                                    <pattern>port="8005"</pattern>
                                    <value>port="${tomcat_server_port}"</value>
                                </substitution>
                                <substitution>
                                    <pattern>port="8009"</pattern>
                                    <value>port="${tomcat_ajp_port}"</value>
                                </substitution>
                            </substitutionList>
                        </substitute>
                        <changePermissions>
                            <files>*/*.sh;*/*.bin</files>
                            <permissions>755</permissions>
                        </changePermissions>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/data</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../image/opencrx-server/installer</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/installer/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname} (${tomcat_http_port})</name>
                            <path>${installdir}/installer/</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/installer/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}/installer/</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Start ${product_fullname} ${product_version} (${tomcat_http_port})</comment>
                            <exec>${installdir}/bin/opencrx.sh START</exec>
                            <icon>${installdir}/installer/favicon.ico</icon>
                            <name>Start ${product_fullname} ${product_version} (${tomcat_http_port})</name>
                            <path>${installdir}/bin/</path>
                            <platforms>all</platforms>
                            <runInTerminal>1</runInTerminal>
                            <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                            <windowsExecArgs>START</windowsExecArgs>
                            <windowsIcon>${installdir}/installer/favicon.ico</windowsIcon>
                            <windowsPath>${installdir}/bin/</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Stop ${product_fullname} ${product_version} (${tomcat_http_port})</comment>
                            <exec>${installdir}/bin/opencrx.sh STOP</exec>
                            <icon>${installdir}/installer/favicon.ico</icon>
                            <name>Stop ${product_fullname} ${product_version} (${tomcat_http_port})</name>
                            <path>${installdir}/bin/</path>
                            <platforms>all</platforms>
                            <runInTerminal>1</runInTerminal>
                            <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                            <windowsExecArgs>STOP</windowsExecArgs>
                            <windowsIcon>${installdir}/installer/favicon.ico</windowsIcon>
                            <windowsPath>${installdir}/bin/</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Start HSQLDB Console for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                            <exec>${installdir}/data/crx_2_8/startdbmanager.sh</exec>
                            <icon>${installdir}/data/hsqldb.ico</icon>
                            <name>Start HSQLDB Console for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                            <path>${installdir}/data/crx_2_8/</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/data/crx_2_8/startdbmanager.bat</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                            <windowsPath>${installdir}/data/crx_2_8</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Start HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                            <exec>${installdir}/data/crx_2_8/startdb.sh START</exec>
                            <icon>${installdir}/data/hsqldb.ico</icon>
                            <name>Start HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                            <path>${installdir}/data/crx_2_8/</path>
                            <platforms>all</platforms>
                            <runInTerminal>1</runInTerminal>
                            <windowsExec>${installdir}/data/crx_2_8/startdb.bat</windowsExec>
                            <windowsExecArgs>START</windowsExecArgs>
                            <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                            <windowsPath>${installdir}/data/crx_2_8/</windowsPath>
                        </shortcut>
                        <shortcut>
                            <comment>Stop HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                            <exec>${installdir}/data/crx_2_8/startdb.sh STOP</exec>
                            <icon>${installdir}/data/hsqldb.ico</icon>
                            <name>Stop HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                            <path>${installdir}/data/crx_2_8/</path>
                            <platforms>all</platforms>
                            <runInTerminal>1</runInTerminal>
                            <windowsExec>${installdir}/data/crx_2_8/startdb.bat</windowsExec>
                            <windowsExecArgs>STOP</windowsExecArgs>
                            <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                            <windowsPath>${installdir}/data/crx_2_8/</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>files</description>
                    <destination>${installdir}/installer/files</destination>
                    <name>files</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../jre-1.6/core/deployment-unit/opencrx-core-CRX.ear</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../openmdx/jre-1.6/core/lib/openmdx-base.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../openmdx/jre-1.6/core/lib/tomcat-juli.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../openmdx/openejb-3/openejb/lib/catalina-extension.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../openmdx/openejb-3/openejb/lib/openejb-tomcat-catalina-3.1.4.jar</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname} (${hsqldb_port})</comment>
                    <name>Uninstall ${product_fullname} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/installer/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/installer/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start ${product_fullname} ${product_version} (${tomcat_http_port})</comment>
                    <name>Start ${product_fullname} ${product_version} (${tomcat_http_port})</name>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop ${product_fullname} ${product_version} (${tomcat_http_port})</comment>
                    <name>Stop ${product_fullname} ${product_version} (${tomcat_http_port})</name>
                    <runInTerminal>1</runInTerminal>
                    <windowsExec>${installdir}/bin/opencrx.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/installer/favicon.ico</windowsIcon>
                    <windowsPath>${installdir}/bin/</windowsPath>
                </startMenuShortcut>                
                <startMenuShortcut>
                    <comment>Start HSQLDB Console for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                    <name>Start HSQLDB Console for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_8/startdbmanager.bat</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_8/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                    <name>Start HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_8/startdb.bat</windowsExec>
                    <windowsExecArgs>START</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_8/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</comment>
                    <name>Stop HSQLDB for ${product_fullname} ${product_version} (${hsqldb_port})</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/data/crx_2_8/startdb.bat</windowsExec>
                    <windowsExecArgs>STOP</windowsExecArgs>
                    <windowsIcon>${installdir}/data/hsqldb.ico</windowsIcon>
                    <windowsPath>${installdir}/data/crx_2_8/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>java_home</name>
            <description>JDK 1.6 home directory</description>
            <explanation>Select home directory of an existing JDK 1.6, e.g. C:\pgm\Java\jdk1.6.0 on Windows or /usr/lib/jvm/jdk1.6.0 on Linux platforms.</explanation>
            <value></value>
            <default></default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <directoryParameter>
            <name>ant_home</name>
            <description>Ant 1.8.0 home directory</description>
            <explanation>Select home directory of an existing Ant 1.8.0 installation, e.g. C:\pgm\apache-ant-1.8.0 on Windows or /opt/apache-ant-1.8.0 on Linux platforms.</explanation>
            <value></value>
            <default>/opt/apache-ant-1.8.0</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>no</mustBeWritable>
            <mustExist>1</mustExist>
            <width>40</width>
        </directoryParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>openCRX Server</description>
            <explanation>Installation directory of openCRX Server. The installation comes with Apache TomEE-6.0.29.314 and a preconfigured HSQLDB database.</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
        <stringParameter>
            <name>hsqldb_port</name>
            <description>HSQLDB port</description>
            <explanation>The installer comes with a default database. Please enter the port number for the HSQLDB database.</explanation>
            <value></value>
            <default>9001</default>
            <allowEmptyValue>0</allowEmptyValue>
            <width>40</width>
        </stringParameter>
        <parameterGroup>
            <name>tomcat_settings</name>
            <explanation>Tomcat configuration settings</explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>tomcat_http_port</name>
                    <description>Tomcat HTTP port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8080</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
                <stringParameter>
                    <name>tomcat_https_port</name>
                    <description>Tomcat HTTPS port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8443</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
                <stringParameter>
                    <name>tomcat_server_port</name>
                    <description>Tomcat server port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8005</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
                <stringParameter>
                    <name>tomcat_ajp_port</name>
                    <description>Tomcat AJP port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8009</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <width>40</width>
                </stringParameter>
            </parameterList>
        </parameterGroup>        
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <postInstallationScript>${installdir}/installer/bin/postinstallation.bat</postInstallationScript>
            <postInstallationScriptArguments></postInstallationScriptArguments>
            <platform>windows</platform>
        </platformOptions>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>
