		target="$INSTALL_PATH/data/hsqldb/db.bat"
		commandLine="stop"
		iconFile="$INSTALL_PATH/data/hsqldb/hsqldb.ico"
		workingDirectory="$INSTALL_PATH/data/hsqldb/"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">		
		<creatForPack name="Main" />		
	</shortcut>
</shortcuts>
