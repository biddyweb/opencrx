<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<installation version="1.0">
	<info>
		<appname>opencrxSdk-@{project.implementation.version}</appname>
		<appversion>@{project.implementation.version}</appversion>
		<uninstaller name="Uninstall.jar" path="$INSTALL_PATH/Uninstall" write="yes" />
	</info>
	<guiprefs width="700" height="480" resizable="no">
		<laf name="kunststoff">
			<os family="unix" />
		</laf>
		<modifier key="useHeadingPanel" value="yes" />
		<modifier key="useHeadingForSummary" value="yes" />
		<modifier key="headingImageOnLeft" value="yes" />
		<modifier key="headingLineCount" value="2" />
		<modifier key="headingFontSize" value="1.5" />
		<modifier key="headingBackgroundColor" value="0x00ffffff" />
		<modifier key="headingPanelCounter" value="text" />
		<modifier key="headingPanelCounterPos" value="inHeading" />
	</guiprefs>
	<locale>
		<langpack iso3="eng" />
	</locale>
	<dynamicvariables>
		<variable name="PROJECT_VERSION" value="@{project.implementation.version}" />
		<variable name="OPENMDX_VERSION" value="@{openmdx.version}" />
	</dynamicvariables>	
	<resources>
		<res id="splash" src="image/opencrx-sdk/splash.gif" />
		<res id="Heading.image" src="image/opencrx-sdk/logo.png" />
		<res id="HTMLHelloPanel.info" src="image/opencrx-sdk/INFO" /> 
		<res id="LicencePanel.licence" src="image/opencrx-sdk/LICENSE" />		
		<res id="HTMLInfoPanel.info" src="image/opencrx-sdk/README" />
		<res id="userInputSpec.xml" src="src/izpack/opencrx-sdk-userinput-spec.xml" />
		<res id="Unix_shortcutSpec.xml" src="src/izpack/opencrx-sdk-unix-shortcut-spec.xml" />
		<res id="shortcutSpec.xml" src="src/izpack/opencrx-sdk-windows-shortcut-spec.xml" />
	</resources>
	<panels>
		<panel classname="HTMLHelloPanel" />
		<panel classname="LicencePanel" /> 
		<panel classname="JDKPathPanel" />
		<panel classname="UserInputPanel" />
		<panel classname="TargetPanel" />
		<panel classname="SummaryPanel" />
		<panel classname="InstallPanel" />
		<panel classname="ShortcutPanel" />
		<panel classname="HTMLInfoPanel" />
		<panel classname="SimpleFinishPanel" />
	</panels>
	<listeners>
		<listener installer="SummaryLoggerInstallerListener">
			<os family="windows" />
		</listener>
	</listeners>
	<packs>
		<pack name="Main" required="yes" installGroups="New Application">
			<description>Main tasks.</description>
			<!-- Image -->
			<fileset dir="image/opencrx-sdk" targetdir="$INSTALL_PATH" />
			<!-- Additional files -->
			<fileset dir="../distribution" includes="opencrx-@{project.implementation.version}**" targetdir="$INSTALL_PATH/repository/distribution" />
			<fileset dir="../../openmdx/distribution" includes="openmdx-@{openmdx.version}**" targetdir="$INSTALL_PATH/repository/distribution" />
			<!-- Generic -->
			<parsable targetfile="$INSTALL_PATH/bin/postinstaller.xml" encoding="UTF-8" type="xml" />
			<!-- Unix -->
			<parsable targetfile="$INSTALL_PATH/bin/postinstallation.sh" encoding="UTF-8" />  
			<executable targetfile="$INSTALL_PATH/bin/postinstallation.sh" type="bin" stage="postinstall" keep="true" os="unix" />
			<parsable targetfile="$INSTALL_PATH/setenv.sh" encoding="UTF-8" /> 			
			<!-- Windows -->
			<parsable targetfile="$INSTALL_PATH/bin/postinstallation.bat" encoding="UTF-8" />
			<executable targetfile="$INSTALL_PATH/bin/postinstallation.bat" type="bin" stage="postinstall" keep="true" os="windows" />
			<parsable targetfile="$INSTALL_PATH/setenv.bat" encoding="UTF-8" />			
		</pack>
		<pack name="PostInstall" required="yes">
			<description>Post installation tasks.</description>
			<!-- Unix -->
			<executable targetfile="$INSTALL_PATH/setenv.sh" type="bin" os="unix" />			
		</pack>
	</packs>
	<native type="izpack" name="ShellLink.dll" />
</installation>
